<!-- stream element partial -->

<div class='photo_area'>
  {{#photos}}
    <div class='photo_attachments'>
      {{#photo}}
        <img src='{{thumb_medium}}' class="stream-photo big-stream-photo"/>
      {{/photo}}
    </div>
  {{/photos}}
</div>

{{#status_message}}
<a href='#/posts/{{id}}'> go here </a>
{{/status_message}}

<div class='content'>
  <div class='from'>
    {{#author}}
      <a href='/people/{{id}}'>
        <img src='{{avatar}}' class='avatar'/>
      </a>
      <a href='/people/{{id}}'>
        {{{name}}}
      </a> 
    {{/author}}
    <div class='info'>
      <span class='time'>{{createdAt}}</span> 
      <span class='via'></span>
      <span class='post-scope'></span>
    </div>
  </div>
  {{{text}}}
</div>

<div class='bottom_bar'>
  <div class='floater'>
    <a href='/post/{{id}}/comments' class='image_link comment_action inactive'></a>
    <a href='/post/{{id}}/likes' class='image_link like_action inactive'></a>
  </div>
  {{commentCount}} reactions

  <div id="comments">
    {{#comments}}
      {{> comment}}
    {{/comments}}
  </div>
</div>

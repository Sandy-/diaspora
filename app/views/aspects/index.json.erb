[
<% for post in @stream.posts do %>
  {
    "id" : <%= post.id %>,
    "author": {
      "id": <%= post.author.id %>,
      "name": "<%= escape_javascript(post.author.name) %>",
      "avatar": "<%= post.author.profile.image_url(:thumb_small) %>"
    },
    "text": <%= post.text.to_json.html_safe %>,
    <% if post.is_a?(StatusMessage) %>
      "photos": <%= post.photos.to_json.html_safe %>,
    <% end %>
    "createdAt": "<%= post.created_at %>",
    "commentCount": "<%= post.comments.size %>",
    "likeCount": "<%= post.likes.size %>"
  }
  <% unless @stream.posts.last == post %>
    <%="," %>
  <% end %>
<% end %>
]

